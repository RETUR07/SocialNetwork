FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build
WORKDIR /source

COPY SocialNetwork.Worker/*.csproj ./SocialNetwork.Worker/

COPY SocialNetwork.Worker/. ./SocialNetwork.Worker/

WORKDIR /source/SocialNetwork.Worker/
RUN dotnet publish -c release -o /app

FROM mcr.microsoft.com/dotnet/sdk:5.0
WORKDIR /app
COPY --from=build /app ./
ENTRYPOINT ["dotnet", "SocialNetwork.Worker.dll"]